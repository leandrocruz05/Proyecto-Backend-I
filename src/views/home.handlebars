<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h1 class="h4 mb-0">Listado de Productos</h1>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Categoría</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.description}}</td>
                        <td class="text-nowrap">${{this.price}}</td>
                        <td><span class="badge bg-info">{{this.stock}}</span></td>
                        <td><span class="badge bg-secondary">{{this.category}}</span></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <a href="/realtimeproducts" class="btn btn-primary">
            <i class="bi bi-broadcast"></i> Ver productos en tiempo real
        </a>
    </div>
</div>